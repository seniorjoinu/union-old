type Error = variant {
    InsufficientBalance;
    AccessDenied;
}

service : {
    "balance_of": (principal, opt int64) -> (nat) query;
    "mint": (principal, nat) -> (variant { Ok; Err: Error });
    "send": (principal, nat) -> (variant { Ok; Err: Error });
    "burn": (nat) -> (variant { Ok; Err: Error });
}
